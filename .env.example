# Google Contacts Cisco Directory - Configuration
# Copy this file to .env and update the values

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME="Google Contacts Cisco Directory"
DEBUG=false
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

# =============================================================================
# Database Settings
# =============================================================================
DATABASE_URL=sqlite:///./data/contacts.db
DATABASE_ECHO=false

# =============================================================================
# Google OAuth 2.0 Settings
# =============================================================================
# Get these from: https://console.cloud.google.com/apis/credentials
# 1. Create a new project or select existing
# 2. Go to APIs & Services > Credentials
# 3. Create OAuth 2.0 Client ID (Web application type)
# 4. Add authorized redirect URI: http://localhost:8000/auth/callback
# 5. Copy Client ID and Client Secret below

GOOGLE_CLIENT_ID=your_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/callback
GOOGLE_TOKEN_FILE=./data/token.json

# OAuth Scopes (comma-separated if multiple)
# Default: contacts.readonly - read-only access to contacts
# GOOGLE_OAUTH_SCOPES=https://www.googleapis.com/auth/contacts.readonly

# =============================================================================
# Application Security (Optional)
# =============================================================================
# Only needed if you implement session management or signed cookies.
# This single-user application stores OAuth tokens in a file, so sessions
# are not required for basic operation.
#
# Generate a secure key with:
#   python -c "import secrets; print(secrets.token_hex(32))"
#
# SECRET_KEY=your-secret-key-here

# =============================================================================
# Cisco Directory Settings
# =============================================================================
# Maximum number of entries per XML directory page
# Cisco phones typically support 32-64 entries per page
DIRECTORY_MAX_ENTRIES_PER_PAGE=32

# Title displayed on Cisco phones
DIRECTORY_TITLE="Google Contacts"

# =============================================================================
# Sync Settings
# =============================================================================
# Number of contacts to process per batch during sync
SYNC_BATCH_SIZE=100

# Delay between API requests (seconds) to avoid rate limiting
SYNC_DELAY_SECONDS=0.1

# =============================================================================
# Search Settings
# =============================================================================
# Maximum number of search results to return
SEARCH_RESULTS_LIMIT=50

# =============================================================================
# Sync Scheduler Settings (Optional)
# =============================================================================
# Enable automatic background synchronization
SYNC_SCHEDULER_ENABLED=false

# Sync interval in minutes (minimum 5, maximum 1440)
SYNC_INTERVAL_MINUTES=60

# =============================================================================
# Timezone Settings
# =============================================================================
# Timezone for timestamp display (uses IANA timezone database names)
# Examples: "America/New_York", "Europe/London", "Asia/Tokyo", "UTC"
# Default: UTC
TIMEZONE=UTC
